#!/usr/bin/env python


# First-party Python libraries
import os
import sys


# AppScale import, the library that we're wrapping this executable
# around
lib = os.path.dirname(__file__) + os.sep + ".." + os.sep + "lib"
sys.path.append(lib)
from appscale import AppScale
from custom_exceptions import UsageException


appscale = AppScale()
if len(sys.argv) < 2:
  appscale.help()

command = sys.argv[1]
if command == "init":
  # TODO(cgb): Make sure argv[2] exists and is 'cloud' or 'cluster'
  appscale.init(sys.argv[2])
elif command == "up":
  appscale.up()
elif command == "status":
  appscale.status()
elif command == "deploy":
  # TODO(cgb): Make sure argv[2] exists, and print helpful info if not
  appscale.deploy(sys.argv[2])
elif command == "destroy":
  pass
else:
  appscale.help()
